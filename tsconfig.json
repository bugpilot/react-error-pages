{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": ["node"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "@/*"],
    },
  },
  "exclude": ["node_modules"],
  "include": ["*.cjs", "*.js", "*.ts", "src/**/*.ts", "src/**/*.tsx"],
}
