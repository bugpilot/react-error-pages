{
  "name": "@bugpilot/react-error-pages",
  "version": "1.0.0",
  "description": "A Collection of reusable React Error Pages",
  "main": "dist/index.mjs",
  "scripts": {
    "lint": "eslint --fix .",
    "prebuild": "pnpm run lint && pnpm audit",
    "cleanup": "rm -rf ./dist && mkdir ./dist",
    "compile": "tsup",
    "build": "npm run cleanup && npm run compile",
    "build:watch": "npx nodemon -w src -e ts,tsx,js,json -x pnpm -- build",
    "add-ui": "pnpm dlx shadcn-ui@latest add"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bugpilot/error-pages-nextjs.git"
  },
  "keywords": [
    "error",
    "handling",
    "error",
    "page",
    "react",
    "next",
    "error",
    "boundary"
  ],
  "author": "Simone Lusenti <lusenti.s@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bugpilot/error-pages-nextjs/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "types": "./dist/index.d.mts",
  "homepage": "https://github.com/bugpilot/error-pages-nextjs#readme",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "prettier-eslint": "^16.2.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "provenance": true
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.312.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}